<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.syen.application.pokedex"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- my icon comes from Roundicons Freebies from https://www.flaticon.com/free-icon/pikachu_188987-->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_pikachu"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_pikachu"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GalleryActivity" />
        <activity
            android:name=".LoadQuery"
            android:noHistory="true"/>
        <activity
            android:name=".InfoActivity"
            />
    </application>

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:remove="android:maxSdkVersion" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>